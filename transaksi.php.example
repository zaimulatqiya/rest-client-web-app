// CORS Headers - HARUS DI ATAS SEMUA KODE LAIN
header("Access-Control-Allow-Origin: *");
header("Access-Control-Allow-Methods: GET, POST, PUT, DELETE, PATCH, OPTIONS");
header("Access-Control-Allow-Headers: Content-Type, Authorization, X-Requested-With");
header("Content-Type: application/json");

// Handle preflight OPTIONS request
if ($_SERVER['REQUEST_METHOD'] === 'OPTIONS') {
    http_response_code(200);
    exit();
}

// Koneksi database (sesuaikan dengan koneksi Anda)
require_once 'config.php'; // Atau sesuaikan dengan file koneksi Anda
// Contoh jika tidak pakai config.php:
// $conn = new mysqli("localhost", "root", "", "nama_database");

// ============================================
// HANDLE PUT REQUEST - UNTUK UPDATE TRANSAKSI
// ============================================
if ($_SERVER['REQUEST_METHOD'] === 'PUT') {
    // Baca data dari request body (PUT tidak pakai $_POST)
    $input = file_get_contents('php://input');
    $data = json_decode($input, true);
    
    // Cek apakah JSON valid
    if (json_last_error() !== JSON_ERROR_NONE) {
        http_response_code(400);
        echo json_encode(['error' => 'Invalid JSON format']);
        exit();
    }
    
    // Ambil ID dari query parameter (dari URL: ?id=2)
    $id = isset($_GET['id']) ? intval($_GET['id']) : null;
    
    // Jika ID tidak ada di query, coba ambil dari body
    if (!$id && isset($data['id'])) {
        $id = intval($data['id']);
    }
    
    if (!$id) {
        http_response_code(400);
        echo json_encode(['error' => 'ID tidak ditemukan. Pastikan URL berisi ?id=2']);
        exit();
    }
    
    // Validasi data yang diperlukan
    if (!isset($data['tanggal']) || !isset($data['nama_pelanggan']) || !isset($data['items'])) {
        http_response_code(400);
        echo json_encode(['error' => 'Data tidak lengkap. Perlu: tanggal, nama_pelanggan, items']);
        exit();
    }
    
    // Validasi items tidak kosong
    if (!is_array($data['items']) || count($data['items']) === 0) {
        http_response_code(400);
        echo json_encode(['error' => 'Items tidak boleh kosong']);
        exit();
    }
    
    // Mulai transaksi database
    $conn->begin_transaction();
    
    try {
        // Update data transaksi
        $tanggal = $conn->real_escape_string($data['tanggal']);
        $nama_pelanggan = $conn->real_escape_string($data['nama_pelanggan']);
        
        $sql = "UPDATE transaksi SET tanggal = ?, nama_pelanggan = ? WHERE id = ?";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("ssi", $tanggal, $nama_pelanggan, $id);
        
        if (!$stmt->execute()) {
            throw new Exception("Gagal update transaksi: " . $stmt->error);
        }
        
        // Hapus items lama
        $sql = "DELETE FROM transaksi_items WHERE transaksi_id = ?";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("i", $id);
        $stmt->execute();
        
        // Insert items baru
        foreach ($data['items'] as $item) {
            $produk_id = intval($item['produk_id']);
            $qty = intval($item['qty']);
            $harga_satuan = floatval($item['harga_satuan']);
            
            $sql = "INSERT INTO transaksi_items (transaksi_id, produk_id, qty, harga_satuan) VALUES (?, ?, ?, ?)";
            $stmt = $conn->prepare($sql);
            $stmt->bind_param("iiid", $id, $produk_id, $qty, $harga_satuan);
            
            if (!$stmt->execute()) {
                throw new Exception("Gagal insert item: " . $stmt->error);
            }
        }
        
        // Commit transaksi
        $conn->commit();
        
        // Response sukses
        http_response_code(200);
        echo json_encode([
            'success' => true,
            'message' => 'Transaksi berhasil diupdate',
            'id' => $id,
            'data' => [
                'tanggal' => $data['tanggal'],
                'nama_pelanggan' => $data['nama_pelanggan'],
                'items' => $data['items']
            ]
        ]);
        exit();
        
    } catch (Exception $e) {
        // Rollback jika ada error
        $conn->rollback();
        http_response_code(500);
        echo json_encode([
            'error' => 'Gagal update transaksi',
            'message' => $e->getMessage()
        ]);
        exit();
    }
}

// ============================================
// HANDLE GET REQUEST - UNTUK AMBIL DATA
// ============================================
if ($_SERVER['REQUEST_METHOD'] === 'GET') {
    if (isset($_GET['id'])) {
        // GET satu transaksi
        $id = intval($_GET['id']);
        $sql = "SELECT t.*, 
                (SELECT SUM(qty * harga_satuan) FROM transaksi_items WHERE transaksi_id = t.id) as total_pembayaran
                FROM transaksi t WHERE t.id = ?";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("i", $id);
        $stmt->execute();
        $result = $stmt->get_result();
        
        if ($result->num_rows > 0) {
            $transaksi = $result->fetch_assoc();
            
            // Ambil items
            $sql_items = "SELECT * FROM transaksi_items WHERE transaksi_id = ?";
            $stmt_items = $conn->prepare($sql_items);
            $stmt_items->bind_param("i", $id);
            $stmt_items->execute();
            $result_items = $stmt_items->get_result();
            
            $items = [];
            while ($row = $result_items->fetch_assoc()) {
                $items[] = $row;
            }
            
            $transaksi['items'] = $items;
            
            http_response_code(200);
            echo json_encode($transaksi);
        } else {
            http_response_code(404);
            echo json_encode(['error' => 'Transaksi tidak ditemukan']);
        }
    } else {
        // GET semua transaksi
        $sql = "SELECT t.*, 
                (SELECT SUM(qty * harga_satuan) FROM transaksi_items WHERE transaksi_id = t.id) as total_pembayaran
                FROM transaksi t ORDER BY t.id DESC";
        $result = $conn->query($sql);
        
        $transaksis = [];
        while ($row = $result->fetch_assoc()) {
            $transaksis[] = $row;
        }
        
        http_response_code(200);
        echo json_encode($transaksis);
    }
    exit();
}

// ============================================
// HANDLE POST REQUEST - UNTUK TAMBAH DATA
// ============================================
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $input = file_get_contents('php://input');
    $data = json_decode($input, true);
    
    if (!isset($data['tanggal']) || !isset($data['nama_pelanggan']) || !isset($data['items'])) {
        http_response_code(400);
        echo json_encode(['error' => 'Data tidak lengkap']);
        exit();
    }
    
    $conn->begin_transaction();
    
    try {
        $tanggal = $conn->real_escape_string($data['tanggal']);
        $nama_pelanggan = $conn->real_escape_string($data['nama_pelanggan']);
        
        $sql = "INSERT INTO transaksi (tanggal, nama_pelanggan) VALUES (?, ?)";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("ss", $tanggal, $nama_pelanggan);
        $stmt->execute();
        
        $transaksi_id = $conn->insert_id;
        
        foreach ($data['items'] as $item) {
            $produk_id = intval($item['produk_id']);
            $qty = intval($item['qty']);
            $harga_satuan = floatval($item['harga_satuan']);
            
            $sql = "INSERT INTO transaksi_items (transaksi_id, produk_id, qty, harga_satuan) VALUES (?, ?, ?, ?)";
            $stmt = $conn->prepare($sql);
            $stmt->bind_param("iiid", $transaksi_id, $produk_id, $qty, $harga_satuan);
            $stmt->execute();
        }
        
        $conn->commit();
        
        http_response_code(201);
        echo json_encode([
            'success' => true,
            'message' => 'Transaksi berhasil ditambahkan',
            'id' => $transaksi_id
        ]);
    } catch (Exception $e) {
        $conn->rollback();
        http_response_code(500);
        echo json_encode(['error' => $e->getMessage()]);
    }
    exit();
}

// ============================================
// HANDLE DELETE REQUEST
// ============================================
if ($_SERVER['REQUEST_METHOD'] === 'DELETE') {
    $id = isset($_GET['id']) ? intval($_GET['id']) : null;
    
    if (!$id) {
        http_response_code(400);
        echo json_encode(['error' => 'ID tidak ditemukan']);
        exit();
    }
    
    $conn->begin_transaction();
    
    try {
        // Hapus items dulu
        $sql = "DELETE FROM transaksi_items WHERE transaksi_id = ?";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("i", $id);
        $stmt->execute();
        
        // Hapus transaksi
        $sql = "DELETE FROM transaksi WHERE id = ?";
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("i", $id);
        $stmt->execute();
        
        $conn->commit();
        
        http_response_code(200);
        echo json_encode([
            'success' => true,
            'message' => 'Transaksi berhasil dihapus'
        ]);
    } catch (Exception $e) {
        $conn->rollback();
        http_response_code(500);
        echo json_encode(['error' => $e->getMessage()]);
    }
    exit();
}

// ============================================
// JIKA METHOD TIDAK DIDUKUNG
// ============================================
http_response_code(405);
echo json_encode(['error' => 'Method tidak didukung']);
?>

